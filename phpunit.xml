<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/boot.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="all">
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="parseAppId" value="parseAppId"/>
        <env name="parseMasterKey" value="parseMasterKey"/>
        <env name="parseServerUrl" value="http://127.0.0.1:1337"/>
        <env name="parseMountPath" value="/parse"/>
    </php>
</phpunit>
